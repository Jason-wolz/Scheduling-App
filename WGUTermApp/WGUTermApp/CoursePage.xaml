<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WGUTermApp.CoursePage"
             Title="Course 1">
    <ContentPage.Content>
        <StackLayout>
            <!--change text to implement database-->
            <StackLayout Orientation="Horizontal">
                <Label Text="Duration: "/>
                <DatePicker Format="yyyy-MM-dd" Date="2021-09-01" IsEnabled="False"/>
                <Label Text=" - "/>
                <DatePicker Format="yyyy-MM-dd" Date="2021-09-30" IsEnabled="False"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Status: "/>
                <Picker x:Name="statusPicker"
                        WidthRequest="250"
                        HorizontalOptions="StartAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Instructor: "/>
                <Label Text="Jason Wolz, 752-9762, jwolz1@wgu.edu"
                       HorizontalOptions="StartAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Assessments: "
                       WidthRequest="100"/>
                <Label Text="Objective Assessment Performance Assessment"
                       HorizontalOptions="StartAndExpand"/>
            </StackLayout>
            <Label Text="Notes:"/>
            <Editor HeightRequest="400"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Cancel"
                        Clicked="CancelButton"
                        HorizontalOptions="CenterAndExpand"/>
                <Button Text="Edit Course"
                        Clicked="EditButton"
                        HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>